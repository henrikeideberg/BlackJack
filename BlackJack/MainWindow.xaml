<Window x:Class="BlackJack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackJack"
        mc:Ignorable="d"
        Title="Lobby" Height="300" Width="300
        " Background="#FFA8B79E">
    <Grid>
        <Button x:Name="button" Content="Connect to Table" HorizontalAlignment="Left" Margin="66,109,0,0" VerticalAlignment="Top" Width="170" Click="button_Click" Height="57" Background="#FF81E367" FontFamily="Tahoma" FontSize="16" FontWeight="Bold"/>
        <Menu Name="menu1" Height="22" Width="200" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Menu.BitmapEffect>
                <DropShadowBitmapEffect />
            </Menu.BitmapEffect>
            <MenuItem Header="_File">
                <MenuItem Header="Table rules" IsCheckable="true" Click="MenuTableRules_Click">
                    <MenuItem.ToolTip>
                        <ToolTip>
                            Manage, export or import table rules.
                        </ToolTip>
                    </MenuItem.ToolTip>
                </MenuItem>
                <MenuItem Header="_Exit" IsCheckable="true" Click="MenuExit_Click"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
